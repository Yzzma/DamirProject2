<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EBC489">
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/fprod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="35dp"
            android:id="@+id/sec_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Пироженные"
            android:textSize="30sp"
            android:letterSpacing="0.3"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_title">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginStart="20dp"
                android:id="@+id/sec_prod"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingEnd="50dp">

                <LinearLayout
                    android:id="@+id/first_prod2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/prod_3"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn1"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="299"
                        android:backgroundTint="#7C4B00"
                        android:textColor="@color/white"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:cornerRadius="30dp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/second_prod2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/first_prod2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/prod_1"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="299"
                        android:backgroundTint="#7C4B00"
                        android:textColor="@color/white"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:cornerRadius="30dp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/third_prod2"
                    app:layout_constraintStart_toEndOf="@id/second_prod2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintTop_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/prod_2"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="299"
                        android:backgroundTint="#7C4B00"
                        android:textColor="@color/white"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:cornerRadius="30dp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fourth_prod2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/third_prod2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/prod_1"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="299"
                        android:backgroundTint="#7C4B00"
                        android:textColor="@color/white"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:cornerRadius="30dp"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout></HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sprod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fprod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/top_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Печеньки"
            android:textSize="30sp"
            android:letterSpacing="0.3"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_title">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginStart="10dp"
                android:id="@+id/top_prod"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingEnd="50dp">

                <LinearLayout
                    android:id="@+id/first_prod"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/prod_2_1"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="299"
                        android:backgroundTint="#7C4B00"
                        android:textColor="@color/white"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:cornerRadius="30dp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/second_prod"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/first_prod"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/prod_2_2"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="299"
                        android:backgroundTint="#7C4B00"
                        android:textColor="@color/white"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:cornerRadius="30dp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/third_prod"
                    app:layout_constraintStart_toEndOf="@id/second_prod"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintTop_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/prod_2_3"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="299"
                        android:backgroundTint="#7C4B00"
                        android:textColor="@color/white"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:cornerRadius="30dp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fourth_prod"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/third_prod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/prod_1"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="299"
                        android:backgroundTint="#7C4B00"
                        android:textColor="@color/white"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:cornerRadius="30dp"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout></HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tprod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sprod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/third_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Торты"
            android:textSize="30sp"
            android:letterSpacing="0.3"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_title">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginStart="10dp"
                android:id="@+id/top_prod3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingEnd="50dp">

                <LinearLayout
                    android:id="@+id/first_prod3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/prod_3_1"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="299"
                        android:backgroundTint="#7C4B00"
                        android:textColor="@color/white"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:cornerRadius="30dp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/second_prod3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/first_prod3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/prod_3_2"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="299"
                        android:backgroundTint="#7C4B00"
                        android:textColor="@color/white"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:cornerRadius="30dp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/third_prod3"
                    app:layout_constraintStart_toEndOf="@id/second_prod3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintTop_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/prod_1"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="299"
                        android:backgroundTint="#7C4B00"
                        android:textColor="@color/white"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:cornerRadius="30dp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fourth_prod3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/third_prod3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/prod_3_3"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="299"
                        android:backgroundTint="#7C4B00"
                        android:textColor="@color/white"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:cornerRadius="30dp"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout></HorizontalScrollView>
    </LinearLayout>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:background="#7C4B00"
        android:id="@+id/bottom_navigatin_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottomnav"
        app:labelVisibilityMode="unlabeled"
        app:itemHorizontalTranslationEnabled="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>